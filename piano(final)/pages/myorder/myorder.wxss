@import "dingdan_list.wxss"

.dingdan {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
}

.navbar {
  background-color: #ffffff;
  text-align: center;
  width: 100%;
  height: 6%;
  display: flex;
  flex-direction: row;
}

.middle{
  width:20%;
}

.type_item {
  text-align: center;
  width: 100%;
  margin-top: 10rpx;
  margin-bottom: 8rpx;
  font-size: 30rpx;
  display: flex;
  flex-direction: row;
}

.order_type{
  margin-top: 10rpx;
  text-align: center;
  color: #000000;
  box-sizing: content-boxs;
  padding-bottom: 1rpx;
}

.select_type {
  margin-top: 10rpx;
  text-align: center;
  color: #1E90FF;
  border-bottom: 2rpx solid;
  padding-bottom: 1rpx;
}




.null_order_list{
  position:fixed;
  top:40%;
  width: 100%;
  text-align: center;
}

.icon{
  margin-top: 2.5%;
  margin-left: 2%;
  object-fit: cover;
  width: 20%;
  height: 20%;
}

.close_icon{
  height: 30rpx;
  width: 30rpx;
  position: fixed;
  left: 80%;
  top:5%;
  margin-top: 5rpx;
  margin-left: 80rpx;
  margin-right: 80rpx;
  object-fit: cover;
}


.order_icon{
  margin-top: 15%;
  margin-left: 5%;
  margin-right: 5%;
  object-fit:cover;
  height: 20%;
  width: 10%;
}


.edit_view{
  height: 38%;
  width: 78%;
  position: fixed;
  top:15%;
  left: 11.2%;
  z-index: 1;
  background-color: white;
  border-radius: 20rpx;
}

.edit_title{
  width:100%;
  height: 30%;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 48rpx;
  background-color: #000000;
  color: white;
  text-align: center;
  vertical-align: middle;
}







.mine {
  height: 100%;
  align-content: center;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 0rpx 0;
  box-sizing: border-box;
}

.top_bg{
  height: 300rpx;
  width: 100%;
  background-color: #000000;
}

.userinfo {
  width: 100%;
  top:150rpx;
  display: flex;
  flex-direction: column;
  text-align: center;
  position:absolute;
  z-index:1;
}

.userinfo-avatar {
  width: 120rpx;
  height: 120rpx;
  margin: 20rpx;
  margin-left: auto;
  margin-right: auto;
  margin-top: 10rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #1E90FF;
  text-align: center;
}

.getUserInfo{
  font-size: 30rpx;
  background-color: transparent;
  /*outline:none !important;*/
}



.item {
  width: 100%;
  height: 70rpx;
  background:#FFFFFF;
  vertical-align: middle;
  display: flex;
  margin-bottom: 580rpx;
  border-top: 2rpx solid #DCDCDC;
  border-bottom: 2rpx solid #DCDCDC;
}

.icon {
  width: 40rpx;
  height: 40rpx;
  /*display: inline-block;*/
  margin-right: 5%;
  margin-left: 5%;
  margin-top: 2%;
  vertical-align: middle;
}

.title {
  color:#000000;
  vertical-align: middle;
  width: 80%;
  font-size:35rpx;
  padding-top: 2%;
}


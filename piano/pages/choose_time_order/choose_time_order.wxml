<view class="section">  
  <picker mode="date" value="{{date}}" start="2018-12-27" end="2019-1-3" bindchange="bindDateChange">  
    <view class="picker">日期: {{dates}}</view>  
  </picker>  
</view>  

<view class="section">  
  <picker mode="time" value="{{time}}" start="00:00" end="23:59" bindchange="bindTimeStart">  
    <view class="picker">起始时间 : {{times}}</view>
  </picker>  
</view>  

<view class="section">  
  <picker mode="time" value="{{time}}" start="00:00" end="23:59" bindchange="bindTimeEnd">  
    <view class="picker">终止时间 : {{times1}}</view>
  </picker>  
</view>  

<button class='btn' bindtap="ok_btn">确认</button>

